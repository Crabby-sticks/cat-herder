<%= form_with(model: [@project, @task]) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description, size: "70x5" %>
  <%= f.text_area :description %>
  <%= f.label :priority %>
  <%= f.number_field :priority, in: 1.0..4.0, step: 0.1 %>
  <%= f.submit %>
<% end %>
<br>
<%=link_to 'Back to project', project_path(@project)%>
<%= link_to 'Home', root_path%>
