<h1>Project <%= @project.name %></h1>

<h2>Description</h2>
<%= @project.description %>

<h2>Priority</h2>
<%= @project.priority %>

<div>
  <%= link_to "Edit",
    edit_project_path(@project)
  %>

  <%= link_to "Delete",
    project_path(@project),
    data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</div>
<div>
  <%= link_to "Add task",
    new_project_task_path(@project)
  %>
</div>

<h1>Tasks</h1>

<% @project.tasks.each do |task| %>
  <div>
    <%= task.name %>
    <%= task.description %>
    <%= task.priority %>
  </div>
<% end %>
